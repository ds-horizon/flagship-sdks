<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feature Flag Tester"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Flag Key Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flag Key:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etFlagKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Enter flag key (e.g., my-feature-flag)"
            android:padding="12dp"
            android:text="recommendations_config" />

        <!-- Targeting Key Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Targeting Key (User ID):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTargetingKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter user ID (e.g., user123)"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Test Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Flag Types:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnTestBoolean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Boolean Flag"
            android:layout_marginBottom="8dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnTestString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test String Flag"
            android:layout_marginBottom="8dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnTestInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Integer Flag"
            android:layout_marginBottom="8dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnTestDouble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Double Flag"
            android:layout_marginBottom="24dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnTestObj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Object Flag"
            android:layout_marginBottom="24dp"
            android:padding="16dp" />

        <!-- Results Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tests run yet"
            android:textSize="14sp"
            android:background="#f0f0f0"
            android:padding="16dp"
            android:fontFamily="monospace"
            android:layout_marginBottom="16dp" />

        <!-- Clear Results Button -->
        <Button
            android:id="@+id/btnClearResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Results"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
